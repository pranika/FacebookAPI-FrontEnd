<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context="posts.facebook.pranika.facebookapi.HomePage">

    <Button
        android:id="@+id/orglogin"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:text="Login as Organization"
        android:onClick="ontextclick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="76dp"
        android:textColor="@color/red"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/orgsignup"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/doclogin"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="127dp"
        android:onClick="ontextclick"

        android:text="Login as Doctor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orgsignup"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:textColor="@color/red"
        android:background="@color/white"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/docsignup"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="18dp"
        android:onClick="ontextclick"

        android:text="Sign Up as Doctor"
        android:textColor="@color/red"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orgsignup"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/psyc2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="76dp"

        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/orgsignup"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/orgsignup"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:text="Sign Up as Organization"
        android:textColor="@color/red"
        android:background="@color/white"
        android:onClick="ontextclick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="52dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="191dp" />

</android.support.constraint.ConstraintLayout>
