<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="posts.facebook.pranika.facebookapi.PatientStatus">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"


            android:onClick="onButtonClicked"
            android:src="@drawable/low" />

        <ImageButton
            android:id="@+id/mild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="onButtonClicked"

            android:src="@drawable/mid"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/low"
            android:layout_marginTop="120dp" />


        <ImageButton
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/high"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mild" />

    </RelativeLayout>
    <Button
        android:id="@+id/update"
        android:layout_width="283dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/mild"
        android:text="CLICK ONE OF THESE" />



</LinearLayout>

</LinearLayout>
